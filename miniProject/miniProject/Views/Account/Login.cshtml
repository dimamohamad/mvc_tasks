@model miniProject.Models.User

@{
    ViewBag.Title = "Login";
}

<div class="login-container">
    <h2>Login Form</h2>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email Address" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn-login">Login</button>
        </div>
    }

</div>

<!-- Styles -->
<style>
    .login-container {
        width: 100%;
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    h2 {
        font-size: 24px;
        font-weight: bold;
        color: #fff;
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 30px;
        background-color: #f9f9f9;
    }

    .btn-login {
        width: 100%;
        padding: 12px;
        border-radius: 30px;
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        color: white;
        font-size: 16px;
        border: none;
        cursor: pointer;
    }

        .btn-login:hover {
            background: linear-gradient(90deg, #5e0eaf, #1f64d4);
        }

    .text-danger {
        color: #e74c3c;
        font-size: 14px;
    }
</style>
