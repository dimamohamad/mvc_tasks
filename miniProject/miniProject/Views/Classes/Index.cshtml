@model IEnumerable<miniProject.Models.Classes>

@{
    ViewBag.Title = "Classes";
}

<div class="container">
    <h2>Classes List</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ClassId) <!-- Display Class ID -->
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClassName) <!-- Display Class Name -->
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassId) <!-- Class ID -->
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClassName) <!-- Class Name -->
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ClassId }, new { @class = "btn btn-sm btn-warning" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ClassId }, new { @class = "btn btn-sm btn-info" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ClassId }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: 'Lato', sans-serif;
    }

    .container {
        max-width: 900px;
        margin: 40px auto;
        padding: 15px;
        background-color: #ffffff;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    h2 {
        font-size: 28px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 25px;
        text-align: center;
    }

    .table {
        width: 100%;
        margin-bottom: 20px;
        border-collapse: collapse;
    }

        .table th, .table td {
            padding: 12px;
            border: 1px solid #ddd;
            text-align: left;
        }

        .table th {
            background-color: #3498db;
            color: white;
            text-transform: uppercase;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .btn-primary {
        background-color: #3498db;
        color: white;
        padding: 10px 15px;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        border: none;
    }

        .btn-primary:hover {
            background-color: #2980b9;
        }

    .btn-warning {
        background-color: #f39c12;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-info {
        background-color: #3498db;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-danger {
        background-color: #e74c3c;
        color: white;
        padding: 5px 10px;
        border-radius: 5px;
        text-decoration: none;
    }

    .btn-sm {
        font-size: 12px;
        margin-right: 5px;
    }
</style>
